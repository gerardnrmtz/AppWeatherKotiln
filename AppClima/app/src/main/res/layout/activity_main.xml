<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">
    <TextView
            android:id="@+id/grados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="70sp"
            android:textStyle="bold" android:layout_marginLeft="84dp" android:layout_marginTop="103dp"
            android:layout_alignParentTop="true" android:textColor="@color/color_grados"/>
    <TextView
            android:id="@+id/ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/grados"
            android:layout_marginLeft="133dp" android:layout_marginTop="42dp"
            android:textSize="30sp" android:textColor="@color/color_ciudad"/>
    <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/grados"
            android:textSize="28sp"
            android:textStyle="bold" android:layout_marginLeft="133dp" android:layout_marginTop="111dp"
            android:textColor="@color/color_estatus"/>
</RelativeLayout>